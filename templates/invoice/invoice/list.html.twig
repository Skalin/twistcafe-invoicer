{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <h1>{{ 'Browse Invoices' }}</h1>

        <div>
            <h2 class="mt-5">{{ 'Invoices' }}</h2>

            <a href="{{ path('invoice_create') }}" class="btn btn-primary">Create new invoice</a>
            <div class="row">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Due At</th>
                        <th scope="col">Issued At</th>
                        <th scope="col">Tax. Supply At</th>
                        <th scope="col">Items Count</th>
                        <th scope="col">Total</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for invoice in pager %}

                        <tr>
                            <th scope="row">{{ invoice.invoiceNumber }}</th>

                            <td>{{ invoice.dueAt|date('d.m.Y H:i:s') }}</td>
                            <td>{{ invoice.issuedAt|date('d.m.Y H:i:s') }}</td>
                            <td>{{ invoice.taxableSupplyAt|date('d.m.Y H:i:s') }}</td>

                            <td>{{ invoice.items.count }}</td>
                            <td>{{ invoice.totalPrice.price|format_currency(invoice.totalPrice.currency.value) }}</td>

                            <td>
                                <a href="{{ path('invoice_view', {
                                    invoice: invoice.id
                                }) }}" class="mixed-vinyl-container p-3 text-center">View</a>
                                <a href="{{ path('invoice_update', {
                                    invoice: invoice.id
                                }) }}" class="mixed-vinyl-container p-3 text-center">Update</a>
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
                {{ pagerfanta(pager) }}
            </div>
        </div>
    </div>
{% endblock %}